<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewBasket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin5"
    app:cardCornerRadius="@dimen/dpSize10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/countProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/cardView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView3">

            <ImageView
                android:id="@+id/imgMinesBasket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mines" />

            <TextView
                android:id="@+id/quantityBasket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dpSize20"
                android:layout_marginEnd="@dimen/dpSize20"
                android:text="12"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgAddBasket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgBasket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cosmetic_banner" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtNameBasket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginEnd="@dimen/marginDefault"
            android:paddingStart="3dp"
            android:text="ست سفت کننده پوست Ritual for Firm Skin تاچاSTUDIO FIX FLUID"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeDefault"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/cardView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView2" />

        <TextView
            android:id="@+id/txtTitleBasket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin3"
            android:text="آموتیا"
            android:textSize="@dimen/textSizeDefault"
            app:layout_constraintEnd_toEndOf="@+id/txtNameBasket"
            app:layout_constraintStart_toStartOf="@+id/txtNameBasket"
            app:layout_constraintTop_toBottomOf="@+id/txtNameBasket" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="85dp"
            android:layout_height="18dp"
            android:layout_marginTop="@dimen/margin5"
            app:layout_constraintEnd_toEndOf="@+id/txtTitleBasket"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleBasket"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/txtPriceBasket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin4"
            android:text="6750000"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize2"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin16"
            android:text="تومان"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeDefault"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/countProduct"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/countProduct" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>