<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin5"
    app:cardCornerRadius="@dimen/dpSize10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewProfile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="@dimen/marginDefault"
            android:layout_marginEnd="@dimen/marginDefault"
            android:layout_marginBottom="@dimen/marginDefault"
            app:cardCornerRadius="@dimen/dpSize10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cosmetic_banner" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dpSize20"
                android:layout_marginTop="40dp"
                android:text="ثبت شد"
                android:textColor="#007E05"
                android:textSize="@dimen/textSizeProfile"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtNameProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:text="ست سفت کننده پوست Ritual for Firm Skin تاچاSTUDIO FIX FLUID"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeDefault"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/cardViewProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardViewProfile" />

        <TextView
            android:id="@+id/txtTitleProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="آموتیا"
            android:textSize="@dimen/textSizeDefault"
            app:layout_constraintEnd_toEndOf="@+id/txtNameProfile"
            app:layout_constraintStart_toStartOf="@+id/txtNameProfile"
            app:layout_constraintTop_toBottomOf="@+id/txtNameProfile" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="در تاریخ "
            android:textSize="@dimen/textSize2"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewProfile"
            app:layout_constraintEnd_toEndOf="@+id/txtTitleProfile" />

        <TextView
            android:id="@+id/txtDateProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="1401/06/30"
            android:textSize="@dimen/textSize2"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"
            app:layout_constraintEnd_toStartOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="ثبت شد."
            android:textSize="@dimen/textSize2"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtDateProfile"
            app:layout_constraintEnd_toStartOf="@+id/txtDateProfile"
            app:layout_constraintTop_toTopOf="@+id/txtDateProfile" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>