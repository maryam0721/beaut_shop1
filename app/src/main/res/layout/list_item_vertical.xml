<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewVertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin5"
    app:cardCornerRadius="@dimen/dpSize10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="@dimen/marginDefault"
            android:layout_marginEnd="@dimen/marginDefault"
            android:layout_marginBottom="@dimen/marginDefault"
            app:cardCornerRadius="@dimen/dpSize10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgVertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cosmetic_banner" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtNameVertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginEnd="@dimen/marginDefault"
            android:paddingStart="@dimen/margin3"
            android:text="ست سفت کننده پوست Ritual for Firm Skin تاچاSTUDIO FIX FLUID"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeDefault"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/cardView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView2" />

        <TextView
            android:id="@+id/txtTitleVertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin3"
            android:text="آموتیا"
            android:textSize="@dimen/textSizeDefault"
            app:layout_constraintEnd_toEndOf="@+id/txtNameVertical"
            app:layout_constraintStart_toStartOf="@+id/txtNameVertical"
            app:layout_constraintTop_toBottomOf="@+id/txtNameVertical" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="85dp"
            android:layout_height="18dp"
            android:layout_marginTop="@dimen/margin5"
            app:layout_constraintEnd_toEndOf="@+id/txtTitleVertical"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleVertical"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/txtPriceVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin4"
            android:text="6750000"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize2"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin16"
            android:layout_marginBottom="@dimen/margin16"
            android:text="تومان"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeDefault"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/cardView2"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>